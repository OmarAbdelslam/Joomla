@model Mobile_Market.Models.Member

@{
    ViewData["Title"] = "Details";

    Layout = "_Layoutdashboard";
}

<h1 style="color:mintcream;">Portfolio</h1>

<div style="color:mintcream;" class="container ">
    <h4>Hi @Html.DisplayFor(model=>model.firstname)</h4>
    <hr />
  
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">ID</label>
                <input value="@Html.DisplayFor(model=>model.memberId)" readonly class="form-control" id="memberid">
            </div>
            <div class="form-group col-md-6">
                <label for="firstname">FirstName</label>
                <input class="form-control" id="firstname" value="@Html.DisplayFor(model=>model.firstname)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="Password">Password</label>
                <input class="form-control" value="@Html.DisplayFor(model=>model.Password)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="LastNmae">LastName</label>
                <input class="form-control" id="LastNmae" value="@Html.DisplayFor(model=>model.lastname)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="email">Email</label>
                <input type="email" class="form-control" value="@Html.DisplayFor(model=>model.email)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="Phone">Phone</label>
                <input value="@Html.DisplayFor(model=>model.phone)" readonly class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label for="firstname">Birth Date</label>
                <input class="form-control" type="date" value="@Html.DisplayFor(model=>model.Bdate)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="Gender">Gender</label>
                <input class="form-control" value="@Html.DisplayFor(model=>model.Gender)" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="questionsecurte">Question Securte</label>
                <input class="form-control" value="@Html.DisplayFor(model=>model.questionsecurte)" readonly>
            </div>
        </div>
    <a asp-action="Edit" style="margin-top:10px" class="btn btn-warning" asp-route-id="@Model?.memberId">Edit</a> |
    <a asp-action="Index" style="margin-top:10px" class="btn btn-info" style="margin:5px 0px 0px 5px;">Back to List</a> |
    <a asp-action="Delete" style="margin-top:10px" class="btn btn-danger" style="margin:5px 0px 0px 5px;">Cancel Subscripe</a>
</div>
